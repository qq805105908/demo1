    function delStu(id) {
        if (confirm("确认删除吗?")) {
            $.ajax({
                url: "http://localhost:55113//Service1.svc/DelStudent?jsoncallback=?&id=" + id,
                type: "GET",
                processData: true,
                dataType: "json",
                contentType: "application/json",
                success: function (data) {
                    if (data.d > 0) {
                        alert("删除成功!");
                        location.href = "/Student/Index";
                    }
            }
        })
        }
    }
    function getSearch() {
