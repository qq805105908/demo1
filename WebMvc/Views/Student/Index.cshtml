    $(function () {
        $.ajax({
            url: "http://localhost:55113//Service1.svc/GetStudents?jsoncallback=?&name=" + "",
            type: "GET",
            contentType: "application/json; charset=utf-8",
            //dataType: "jsonp",
            success: function (data) {
                console.log(data);
                $("#divData").empty();
                $(data.d).each(function () {
                    var line = '<tr>' +
                        '<td>' + this.StudentID + '</td>' +
                        '<td>' + this.Number + '</td>' +
                        '<td>' + this.Name + '</td>' +
                        '<td>' + this.ClassID + '</td>' +
